<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shooter_game_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060887"
    android:orientation="vertical"
    tools:context="com.example.testingtfg.minigames.shooterMinigame.ShooterGameFragment">

    <com.example.testingtfg.minigames.DefaultGameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/button_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/pause_button"
        android:visibility="gone" />

    <include layout="@layout/view_shooter_joystick" />

</FrameLayout>